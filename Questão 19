//Leia o valor do raio de uma esfera, calcule e escreva seu volume. (v = (4 * pi * r^3)/ 3) (pi = 3,14):
const prompt = require('prompt-sync')();


console.log('Digite o valor do raio de uma esfera:')

const raio = Number(prompt('Raio da esfera: '))


//Cálculo do volume

const volume = (4 * 3.14 * (raio * raio * raio))/3

console.log('O volume da esfera é igual a: ',volume,'.')
