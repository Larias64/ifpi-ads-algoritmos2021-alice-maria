//Leia a idade de uma pessoa expressa em anos, meses e dias e escreva-a expressa apenas em dias:
const prompt = require('prompt-sync')();


console.log('Digite uma idade em anos, meses e dias:')

var ano = Number(prompt('Ano(s): '))
var mes = Number(prompt('Mese(s): '))
var dia = Number(prompt('Dia(s): '))


//Converter meses em dias (considerei 1 mês = 30 dias)

var mes_dia = mes*30

//Converter anos em dias

var ano_dia = ano*365

//Somar os dias 

var soma = mes_dia + ano_dia + dia

console.log('A idade em dia é:',soma,'.')
