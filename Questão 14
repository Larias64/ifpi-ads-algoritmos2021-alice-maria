//Leia 3 notas de um aluno e o peso de cada nota, calcule e escreva a média ponderada:
const prompt = require('prompt-sync')();

console.log('Escreva 3 notas que um aluno tirou:')

var nota_1 = Number(prompt('Nota 1: '))

var nota_2 = Number(prompt('Nota 2: '))

var nota_3 = Number(prompt('Nota 3: '))

console.log('Escreva 3 pesos para as notas respectivamente:')

var peso_1 = Number(prompt('Peso 1: '))

var peso_2 = Number(prompt('Peso 2: '))

var peso_3 = Number(prompt('Peso 3: '))


var mediaPonderada = (nota_1*peso_1) + (nota_2*peso_2) + (nota_3*peso_3) / (peso_1 + peso_2 + peso_3)



console.log('A média ponderada das notas é igual a: ',mediaPonderada,'.')
