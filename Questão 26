//Leia um número inteiro de dias, calcule e escreva quantas semanas e quantos dias ele corresponde:
const prompt = require('prompt-sync')();


console.log('Digite número inteiro de dias:')

const dia = Number(prompt('Dias: '))


//dia para semanas e dias:

var semana = Math.trunc(dia/7)

if(semana < 1){
    semana = 0
}

const diasRestantes = dia%7

console.log('Os dias foram convertidos para:',semana,'semana(s) e',diasRestantes,'dia(s).')
