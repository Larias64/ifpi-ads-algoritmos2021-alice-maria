//Leia o valor da base e altura de um triângulo, calcule e escreva sua área. área=(base * altura)/2:
const prompt = require('prompt-sync')();

console.log('Escreva o valor da base e altura de um triângulo:')
const base = Number(prompt('Base do triângulo: '))
const altura = Number(prompt('Altura do triângulo: '))

//Cálculo da área

const area = (base * altura)/2

console.log('A área do triândulo é igual a: ',area,'.')
