/*Escreva um algoritmo que, tendo como dados de entrada 2 pontos quaisquer no plano, ponto1 (x1,y1) e
ponto2 (x2,y2), escreva a distância entre eles, conforme fórmula d= raizquadrada((x2-x1)²+(y2-y1)²) */

const prompt = require('prompt-sync')();


console.log('Digite a posicão de dois pontos no plano:')

const x1 = Number(prompt('Primeira posição do ponto 1: '))
const x2 = Number(prompt('Segunda posição do ponto 1: '))
const y1= Number(prompt('Primeira posição do ponto 2: '))
const y2 = Number(prompt('Segunda posição do ponto 2: '))

//Calculando (x2-x1)²

var x = Math.pow((x2-x1), 2)

//Calculando (y2-y1)²

var y = Math.pow((y2-y1), 2)

//Calculando a distância

var d =  Math.sqrt((x+y))


console.log('A distância dos dois pontos é de:',d)
